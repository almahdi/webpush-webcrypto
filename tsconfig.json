{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "node",
		"target": "ES2018",
		"lib": ["ES2018", "DOM"],
		"declaration": true,
		"emitDeclarationOnly": true,
		"outDir": "./lib",
		"strict": true,
		"allowJs": true,
		"checkJs": false,
		"skipLibCheck": true
	},
	"include": ["lib/**/*"],
	"exclude": ["node_modules", "test", "example"]
}